<resources>
	<!--SplashScreen-->
	<style name="SplashTheme" parent="@android:style/Theme.Material.NoActionBar.Fullscreen">
		<item name="android:windowBackground">@drawable/splash</item>
    </style>
	<!--DarkTheme-->
    	<style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
			<item name="android:windowBackground">@drawable/dark_bg</item>
        	<item name="colorPrimary">#3D3D3D</item>
        	<item name="colorPrimaryDark">#1E1E1E</item>
			<item name="abStyle">@style/DarkActionBar</item>
			<item name="android:alertDialogTheme">@style/DarkDialog</item>
		</style>
    	<style name="DarkActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        	<item name="android:displayOptions">homeAsUp</item>
			<item name="android:textColor">#438CEE</item>
			<item name="android:textColorPrimary">#FFFFFF</item>
    	</style>

		<style name="DarkDialog" parent="Theme.AppCompat.Dialog.Alert">
		<!-- Used for the buttons -->
			<item name="colorAccent">#FC0E00</item>
		<!-- Used for the title and text -->
			<item name="android:textColorPrimary">#393939</item>
		<!-- Used for the background -->
			<item name="android:windowBackground">@drawable/darkdialog_bg</item>
			<item name="android:windowContentOverlay">@null</item>
			<item name="android:windowIsFloating">true</item>
			<item name="android:windowTitleStyle">@style/DarkDialogTitle</item>
		</style>
		<style name="DarkDialogTitle">
			<item name="android:textColor">#437BFA</item>
			<item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
		</style>
	<!--LightTheme-->
		<style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
			<item name="android:windowBackground">@drawable/light_bg</item>
        	<item name="colorPrimary">#FFFFFF</item>
        	<item name="colorPrimaryDark">#EEEEEE</item>
			<item name="android:alertDialogTheme">@style/LightDialog</item>
		</style>
    	<style name="LightActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        	<item name="android:displayOptions">homeAsUp</item>
			<item name="android:textColor">#000000</item>
			<item name="android:textColorPrimary">#202021</item>
    	</style>

		<style name="LightDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
			<!-- Used for the buttons -->
			<item name="colorAccent">#FC0E00</item>
			<!-- Used for the title and text -->
			<item name="android:textColorPrimary">#393939</item>
			<!-- Used for the background -->
			<item name="android:windowBackground">@drawable/lightdialog_bg</item>
			<item name="android:windowContentOverlay">@null</item>
			<item name="android:windowIsFloating">true</item>
			<item name="android:windowTitleStyle">@style/LightDialogTitle</item>
		</style>
		<style name="LightDialogTitle">
			<item name="android:textColor">#437BFA</item>
			<item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
		</style>
</resources>

